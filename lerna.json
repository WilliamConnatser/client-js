{
  "packages": [
    "./src"
  ],
  "includeMergedTags": true,
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "conventionalcommits",
      "ignoreChanges": ["**/*.md"],
      "allowBranch": ["master", "release/*"],
      "message": "chore(release): publish"
    }
  },
  "version": "independent"
}
