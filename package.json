{
  "name": "@polygon.io/client-js",
  "version": "0.0.1-beta",
  "description": "Isomorphic Javascript client for Polygon.io Stocks, Forex, and Crypto APIs",
  "scripts": {
    "test": "mocha --require ts-node/register '**/*.test.ts'",
    "test:watch": "mocha --require ts-node/register --watch '**/*.test.ts'",
    "format": "prettier --write '**/*.ts'",
    "build": "lerna run build",
    "generate-doc": "typedoc src/main.ts",
    "dev": "npm run build && cd sandbox && npm run dev"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.11",
    "@types/sinon": "^10.0.6",
    "@types/websocket": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "chai": "^4.3.4",
    "cross-fetch": "^3.1.4",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "query-string": "^7.0.1",
    "sinon": "^12.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.9.4",
    "websocket": "^1.0.34"
  },
  "workspaces": [
    "./sandbox",
    "./lib/*"
  ]
}
